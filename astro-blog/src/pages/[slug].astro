---
import { getCollection, getEntryBySlug } from 'astro:content';
import { filterPostsForBuild } from '../lib/build-filter';
import Layout from '../layouts/Layout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const posts = filterPostsForBuild(await getCollection('blog'));
  return posts.map((post) => ({ params: { slug: post.slug } }));
}

const { slug } = Astro.params;

// Load all published posts for sidebar navigation
const posts = filterPostsForBuild(await getCollection('blog', ({ data }) => data.status === 'publish'));
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Load the requested post
const post = await getEntryBySlug('blog', slug);
if (!post) {
  throw new Error(`Post not found: ${slug}`);
}
const { Content } = await post.render();

function imageForCategory(cat: string): string {
  switch (cat) {
    case '練習(弱)':
      return '/images/workouts/abstract-04.svg'; // mild
    case '練習(中)':
      return '/images/workouts/abstract-03.svg'; // moderate
    case '練習(強)':
      return '/images/workouts/abstract-08.svg'; // strong
    case '試合':
      return '/images/workouts/abstract-02.svg'; // strongest
    case '練習(デフォルト)':
    default:
      return '/images/workouts/abstract-01.svg'; // neutral
  }
}
---

<Layout>
  <article class="card p-0 overflow-hidden">
    <img src={imageForCategory(post.data.category)} alt={`Image for ${post.data.title}`} width="1200" height="630" class="w-full aspect-[1200/630] object-cover" loading="eager" />
    <div class="p-6 md:p-10">
      <header class="mb-6">
        <div class="flex items-center gap-3 text-xs text-gray-500 mb-2">
          <span class="badge">{post.data.category}</span>
          <time datetime={post.data.date.toISOString()}>{post.data.date.toDateString()}</time>
        </div>
        <h1 class="mb-2">{post.data.title}</h1>
      </header>
      <div class="prose max-w-none dark:prose-invert"><Content /></div>
    </div>
  </article>
</Layout>
